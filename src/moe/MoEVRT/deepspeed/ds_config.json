{
  "train_micro_batch_size_per_gpu": 1,
  "gradient_clipping": 1.0,
  "gradient_accumulation_steps": 4,
  "steps_per_print": 200000,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 1e-4,
      "betas": [
        0.9,
        0.99
      ],
      "eps": 1e-8,
      "weight_decay": 0
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "total_num_steps": 500000,
      "warmup_min_lr": 0,
      "warmup_max_lr": 1e-4,
      "warmup_num_steps": 1000
    }
  },
  "fp16": {
    "enabled": true
  }
}